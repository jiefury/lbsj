<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/bin</directory>
            <outputDirectory>${file.separator}bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/static</directory>
            <outputDirectory>${file.separator}static</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/data</directory>
            <outputDirectory>${file.separator}data</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/excel</directory>
            <outputDirectory>${file.separator}excel</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/classes/lib</directory>
            <outputDirectory>${file.separator}lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>deploy</directory>
            <outputDirectory>${file.separator}deploy</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.build.directory}${file.separator}${build.finalName}.jar</source>
            <outputDirectory>${file.separator}</outputDirectory>
            <destName>${build.finalName}.jar</destName>
        </file>
        <file>
            <source>src/main/resources/application.yml</source>
            <outputDirectory>${file.separator}config</outputDirectory>
            <destName>application.yml</destName>
        </file>
    </files>
</assembly>
